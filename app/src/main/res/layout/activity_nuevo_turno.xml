<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nuevo_turno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.proyecto.geobus.menuActivities.NuevoTurnoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Turno"
        android:id="@+id/textView7" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Recorrido"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:textSize="15dp"/>


    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/fRecorrido"
        android:hint="Recorrido"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Chofer"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:textSize="15dp"/>


    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/fChofer"
        android:hint="Chofer"
        android:layout_below="@+id/fRecorrido"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Colectivo"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:textSize="15dp"/>


    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/fColectivo"
        android:hint="Colectivo"
        android:layout_below="@+id/fChofer"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/buttonSetHoraInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:onClick="setTimeHoraInicio"
        android:text="Setear Hora Inicio"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fColectivo"
        android:text="@string/date_selected"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/buttonSetHoraFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSetHoraInicio"
        android:onClick="setTimeHoraFin"
        android:text="Setear Hora Inicio"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView12"
        android:text="@string/date_selected"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Guardar"
        android:id="@+id/bt_registrar_turno"
        android:textSize="13dp"
        android:elevation="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

</RelativeLayout>

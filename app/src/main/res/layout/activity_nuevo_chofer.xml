<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nuevo_chofer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.proyecto.geobus.menuActivities.NuevoChoferActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Chofer"
        android:id="@+id/textViewTitulo" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Dni"
        android:id="@+id/textViewDni"
        android:textColor="#000000"
        android:layout_below="@+id/textViewTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/fdni"
        android:textSize="15dp"
        />

    <Button
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Registrar"
        android:id="@+id/bt_registrar_chofer"
        android:textSize="13dp"
        android:elevation="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/fUsuario"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fdni"
        android:hint="Dni"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewTitulo"
        android:layout_alignLeft="@+id/textViewTitulo"
        android:layout_alignStart="@+id/textViewTitulo" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/fNombre"
        android:hint="Nombre"
        android:textSize="15dp"
        android:layout_below="@+id/textViewDni"
        android:layout_alignLeft="@+id/fdni"
        android:layout_alignStart="@+id/fdni" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Nombre"
        android:textColor="#000000"
        android:id="@+id/textViewNombre"
        android:textSize="15dp"
        android:layout_below="@+id/textViewDni"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Usuario"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/fUsuario"
        android:layout_alignBottom="@+id/fUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/fUsuario"
        android:hint="Usuario"
        android:textSize="15dp"
        android:layout_below="@+id/fNombre"
        android:layout_alignLeft="@+id/fNombre"
        android:layout_alignStart="@+id/fNombre" />

</RelativeLayout>
